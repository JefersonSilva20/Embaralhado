<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shuffler_game_mode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroung"
    android:orientation="vertical"
    tools:context="estagio3.ufpb.com.br.projeto1.ShufflerGameMode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/settingsLinear">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/menuButton"
            android:layout_margin="5dp"
            android:elevation="10dp"
            android:background="@drawable/menu"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:text="Organize as Letras"
            android:layout_margin="5dp"
            android:gravity="center"
            android:id="@+id/textModeGame"
            android:textSize="25sp"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/somButton"
            android:layout_margin="5dp"
            android:background="@drawable/speaker"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/linearImage">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:id="@+id/imageQuestion"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/drop"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="#6f80b9"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:id="@+id/drop1"
            android:gravity="center">

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="#6f80b9"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:id="@+id/drop2"
            android:gravity="center">

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="#6f80b9"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:id="@+id/drop3"
            android:gravity="center">

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="#6f80b9"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:id="@+id/drop4"
            android:gravity="center">

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="#6f80b9"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:id="@+id/drop5"
            android:gravity="center">

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="#6f80b9"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:id="@+id/drop6"
            android:gravity="center">

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="#6f80b9"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:id="@+id/drop7"
            android:gravity="center">

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="#6f80b9"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:id="@+id/drop8"
            android:gravity="center">

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="#6f80b9"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:id="@+id/drop9"
            android:gravity="center">

        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="#6f80b9"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:id="@+id/drop0"
            android:gravity="center">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/drag"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/drag1"
            android:visibility="gone"
            android:layout_margin="5dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/drag2"
            android:visibility="gone"
            android:layout_margin="5dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/drag3"
            android:layout_margin="5dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="gone"
            android:id="@+id/drag4"
            android:layout_margin="5dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/drag5"
            android:visibility="gone"
            android:layout_margin="5dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/drag6"
            android:visibility="gone"
            android:layout_margin="5dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/drag7"
            android:visibility="gone"
            android:layout_margin="5dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/drag8"
            android:visibility="gone"
            android:layout_margin="5dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/drag9"
            android:visibility="gone"
            android:layout_margin="5dp"/>


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/drag0"
            android:visibility="gone"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:id="@+id/checkLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/antButton"
                android:layout_margin="5dp"
                android:background="@drawable/back"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/checkButton"
                android:background="@drawable/checked"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/proxButton"
                android:layout_margin="5dp"
                android:background="@drawable/next"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
