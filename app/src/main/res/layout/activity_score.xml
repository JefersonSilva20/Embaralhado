<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroung"
    tools:context="estagio3.ufpb.com.br.projeto1.ScoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/settingsLinear">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/menuButton"
            android:layout_margin="5dp"
            android:background="@drawable/menu"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:text="Melhores Pontuações"
            android:layout_margin="5dp"
            android:gravity="center"
            android:id="@+id/textModeGame"
            android:textSize="30sp"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/somButton"
            android:layout_margin="5dp"
            android:background="@drawable/sound_button"/>
    </LinearLayout>

    <ListView
        android:id="@+id/listViewPontos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none|vertical"
        />


</LinearLayout>
