<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    android:orientation="vertical"
    tools:categorie="estagio3.ufpb.com.br.embaralhando.WordsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#004D40"
        android:title="Adicionar Palavras">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_word_title"
            android:text="Palavras Cadastradas"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/soundButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="@drawable/ic_volume_up_white" />

        <ImageButton
            android:id="@+id/edit_word_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/delete_button" />

        <ImageButton
            android:id="@+id/finish_edit_word_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/finish_delete_button"
            android:saveEnabled="false"
            android:visibility="gone" />


    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listViewWords"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none|vertical" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_wordbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_add_white" />

    </FrameLayout>
</LinearLayout>
