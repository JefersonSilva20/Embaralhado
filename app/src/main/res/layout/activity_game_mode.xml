<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_mode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroung"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="estagio3.ufpb.com.br.projeto1.GameModeActivity"
    android:baselineAligned="false">

    <TextView
        android:id="@+id/modeGameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="@string/modos_de_jogo"
        android:gravity="center"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/connectButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/link"/>

            <TextView
                android:id="@+id/textConnectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/conecta"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="25sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/shufflerButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/shuffle"/>

            <TextView
                android:id="@+id/textShufflertButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mistura"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="25sp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
