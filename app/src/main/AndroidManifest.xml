<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mydroidtechnology.embaralhado">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="com.mydroidtechnology.embaralhado.view.SplashActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mydroidtechnology.embaralhado.view.MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.mydroidtechnology.embaralhado.view.SelectCategoriesScoreActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.mydroidtechnology.embaralhado.view.EditCategorieActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.mydroidtechnology.embaralhado.view.EditWordActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.mydroidtechnology.embaralhado.view.CategoriesActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.mydroidtechnology.embaralhado.view.WordsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.mydroidtechnology.embaralhado.view.SelectCategoriesToPlayActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.mydroidtechnology.embaralhado.view.ScoreActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.mydroidtechnology.embaralhado.view.ShuffleGameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.mydroidtechnology.embaralhado.view.InsertNewCategoriesActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.mydroidtechnology.embaralhado.view.InsertNewWordActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.mydroidtechnology.embaralhado.view.CongratulationsMessageActivity"
            android:screenOrientation="landscape" />

        <activity android:name="com.mydroidtechnology.embaralhado.view.PrivacyPolicyActivity"
            android:screenOrientation="landscape"/>

        <service
            android:name="com.mydroidtechnology.embaralhado.service.BackgroundMusicService"
            android:enabled="true"
            android:exported="true"
            android:permission="true"
            android:stopWithTask="true" />

    </application>

</manifest>